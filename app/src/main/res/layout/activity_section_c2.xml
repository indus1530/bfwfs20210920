                                android:id="@+id/c20607"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.c206.equals(`7`)}"
                                android:onClick="@{()->form.setC206(`7`)}"
                                android:text="@string/c20607" />

                            <RadioButton
                                android:id="@+id/c20608"
                                android:layout_width="match_parent"
