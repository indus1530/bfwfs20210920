                                android:text="@string/c20608" />

                            <RadioButton
                                android:id="@+id/c20698"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.c206.equals(`98`)}"
                                android:onClick="@{()->form.setC206(`98`)}"
                                android:text="@string/c20698" />

                            <RadioButton
                                android:id="@+id/c20696"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="@{form.c206.equals(`96`)}"
                                android:onClick="@{()->form.setC206(`96`)}"
                                android:text="@string/c20696" />

                            <EditText
                                android:id="@+id/c20696x"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="AaBbCcDdEeFfGgHhIiJjKkLlMmNnOoPpQqRrSsTtUuVvWwXxYyZz0123456789,. "
                                android:hint="@string/c20696"
                                android:tag="c20696"
                                android:text="@={form.c20696x}"
                                android:visibility="@{form.c206.equals(`96`) ? View.VISIBLE : View.GONE}" />

